# ================================
# 1. Import Required Libraries
# ================================
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import joblib

from sklearn.model_selection import train_test_split
from sklearn.preprocessing import StandardScaler
from sklearn.linear_model import LogisticRegression
from sklearn.ensemble import RandomForestClassifier
from sklearn.metrics import classification_report, confusion_matrix


# ================================
# 2. Load Dataset
# ================================
df = pd.read_csv("creditcard.csv")

print("Dataset Shape:", df.shape)
print("\nClass Distribution:")
print(df['Class'].value_counts())


# ================================
# 3. Visualize Class Imbalance
# ================================
sns.countplot(x='Class', data=df)
plt.title("Fraud vs Non-Fraud Transactions")
plt.show()


# ================================
# 4. Separate Features and Target
# ================================
X = df.drop("Class", axis=1)
y = df["Class"]

# ================================
# Handle NaN values in target variable
# ================================
nan_in_y_indices = y[y.isna()].index
if not nan_in_y_indices.empty:
    print(f"Found {len(nan_in_y_indices)} NaN values in the target variable 'y'. Removing corresponding rows.")
    X = X.drop(nan_in_y_indices)
    y = y.drop(nan_in_y_indices)
    print(f"New dataset shape after removing NaNs: {X.shape}")


# ================================
# 5. Train-Test Split (Stratified)
# ================================
X_train, X_test, y_train, y_test = train_test_split(
    X,
    y,
    test_size=0.2,
    stratify=y,
    random_state=42
)


# ================================
# 6. Feature Scaling
# ================================
scaler = StandardScaler()
X_train_scaled = scaler.fit_transform(X_train)
X_test_scaled = scaler.transform(X_test)


# ================================
# 7. Baseline Model – Logistic Regression
# ================================
log_model = LogisticRegression(max_iter=1000)
log_model.fit(X_train_scaled, y_train)

y_pred_log = log_model.predict(X_test_scaled)

print("\nLogistic Regression Performance:")
print(classification_report(y_test, y_pred_log))


# ================================
# 8. Random Forest Model Training
# ================================
rf_model = RandomForestClassifier(
    n_estimators=100,
    random_state=42,
    n_jobs=-1
)

rf_model.fit(X_train, y_train)


# ================================
# 9. Random Forest Evaluation
# ================================
y_pred_rf = rf_model.predict(X_test)

print("\nRandom Forest Performance:")
print(classification_report(y_test, y_pred_rf))


# ================================
# 10. Confusion Matrix
# ================================
cm = confusion_matrix(y_test, y_pred_rf)

sns.heatmap(cm, annot=True, fmt='d', cmap='Blues')
plt.xlabel("Predicted")
plt.ylabel("Actual")
plt.title("Random Forest Confusion Matrix")
plt.show()


# ================================
# 11. Feature Importance Plot
# ================================
importance_df = pd.DataFrame({
    "Feature": X.columns,
    "Importance": rf_model.feature_importances_
}).sort_values(by="Importance", ascending=False)

plt.figure(figsize=(10, 6))
sns.barplot(
    x="Importance",
    y="Feature",
    data=importance_df.head(10)
)
plt.title("Top 10 Feature Importances – Fraud Detection")
plt.tight_layout()
plt.savefig("feature_importance.png")
plt.show()


# ================================
# 12. Save Model and Scaler
# ================================
joblib.dump(rf_model, "random_forest_fraud_model.pkl")
joblib.dump(scaler, "scaler.pkl")

print("\nModel and scaler saved successfully!")